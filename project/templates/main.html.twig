<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    {# <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous"> #}
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
 </head>

  <body>
    {% block title %}
        <title>Main Page</title>
    {% endblock %}

    {% block table %}
        <h2 href="/main/add" align="center" style="color:Grey">  Base Of Products</h2>
        <table class="table table-striped">
            <thead class="table-dark">
            <tr>
                <th scope="col" width="450">Name</th>
                <th scope="col" width="450">Price</th>
                <th scope="col" width="450">Season</th>
                <th scope="col" width="150"></th>
                <th scope="col" width="150"></th>
                <th scope="col" width="150"></th>
            </tr>
            </thead>
        {% for product in products %}
            <tbody>
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.season }}</td> 
                <td> <a button class="btn btn-outline-success" type="button" href="/main/edit/{{ product.id }}">edit</a> </td> 
                <td><a button class="btn btn-outline-secondary" type="button" href="/main/del/{{ product.id }}">delete</a></td>
                <td><a button class="btn btn-outline-danger" type="button" href="/main/display/{{ product.id }}">display</a></td>
             </tr>

            </tbody> 
        {% endfor %}
        </table>
        <div class="d-grid gap-2 d-md-block" align="center">
            <a button class="btn btn-primary" type="button" href="/main/add/">Add new product</a> 
        </div>   
    {% endblock %}
  </body>
</html>